<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lists_row_height"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_small"
    android:paddingStart="@dimen/margin_small">

    <TextView
        android:id="@+id/text_view_game"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/text_view_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_item_state"
        android:textColor="@color/black"
        android:textSize="@dimen/list_item_state"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/text_view_game" />

    <TextView
        android:id="@+id/text_view_state_concrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/list_item_state"
        android:layout_marginLeft="4dp"
        android:layout_alignTop="@+id/text_view_state"
        android:layout_toRightOf="@+id/text_view_state"
        android:layout_toEndOf="@+id/text_view_state" />

    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_black"
        android:textSize="@dimen/list_item_state"
        android:layout_above="@+id/text_view_sets"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/text_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_black"
        android:textSize="@dimen/list_item_state"
        android:layout_alignTop="@+id/text_view_sets"
        android:layout_alignRight="@+id/text_view_date"
        android:layout_alignEnd="@+id/text_view_date" />

    <TextView
        android:id="@+id/text_view_sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_black"
        android:textSize="@dimen/list_item_state"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/text_view_state"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:id="@+id/button_remove_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:visibility="visible" />

</RelativeLayout>