<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lists_row_height"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_small"
    android:paddingStart="@dimen/margin_small">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pic_height"
        android:id="@+id/bgImage"
        android:src="@drawable/beachvolleyball"
        android:alpha="0.4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView_game"
        style="@style/ListItemText"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_above="@+id/textView_sportType" />

    <TextView
        android:id="@+id/textView_sportType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/list_item_state"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/text_view_state"
        android:layout_alignStart="@+id/text_view_state" />

    <TextView
        android:id="@+id/text_view_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_item_state"
        android:textColor="@color/black"
        android:textSize="@dimen/list_item_state"
        android:layout_below="@+id/textView_sportType"
        android:layout_alignLeft="@+id/textView_game"
        android:layout_alignStart="@+id/textView_game" />

    <TextView
        android:id="@+id/textView_state_concrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/list_item_state"
        android:layout_marginLeft="4dp"
        android:layout_alignTop="@+id/text_view_state"
        android:layout_toRightOf="@+id/text_view_state"
        android:layout_toEndOf="@+id/text_view_state" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_black"
        android:textSize="@dimen/list_item_state"
        android:layout_above="@+id/textView_sets"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text=""
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_black"
        android:textSize="@dimen/list_item_state"
        android:text=""
        android:layout_alignTop="@+id/textView_sets"
        android:layout_alignRight="@+id/textView_date"
        android:layout_alignEnd="@+id/textView_date" />

    <TextView
        android:id="@+id/textView_sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_black"
        android:text=""
        android:textSize="@dimen/list_item_state"
        android:layout_below="@+id/text_view_state"
        android:layout_alignLeft="@+id/text_view_state"
        android:layout_alignStart="@+id/text_view_state" />


    <TextView
        android:id="@+id/textView_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_black"
        android:textSize="@dimen/list_item_state"
        android:text=""
        android:layout_above="@+id/textView_date"
        android:layout_alignRight="@+id/textView_date"
        android:layout_alignEnd="@+id/textView_date" />

</RelativeLayout>